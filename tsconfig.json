{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": [
    "src/**/*",
    "src/*",
    "**/*.ts",
    "test/**/*.ts",
    "test/*.ts",
    "typings/**/*.ts"
  ],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "module": "esnext",
    "types": ["node", "svelte", "mocha"],
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ES2019", "DOM"]
  }
}
